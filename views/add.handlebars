<!doctype html>

<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Add news</title>
	<meta name="description" content="form to add new books">
	<meta name="author" content="Mark Tyers">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script type="module" src="../main.js"></script>
</head>

<body>
	<header>
		<h1>Secure Page</h1>
    <button id="hamburger"><i class="fa fa-bars"></i></button>
    <ul>
      {{#if admin}}
      <li><a href="/news/pending">Pending</a></li>
    {{/if}}
    {{#if authorised}}
       <li><a href="/users/{{userid}}">User news</a></li>
       <li><a class="active" href="/news/add">Add news</a></li>
       <li><a href="/logout">Log out</a></li>
    {{else}}
       <li><a href="/login">Log in</a></li>
       <li><a href="/register">Register</a></li>
    {{/if}}
    </ul>	
	</header>
	{{#if msg}}
	<p class="msg">{{msg}}</p>
	{{/if}}
	<main>
		<form id="addnews" name="addnews" enctype="multipart/form-data" method="post">
			<div class="input">
				<label for="title">Title</label><br />
				<input required type="text" name="title" placeholder="Article title" value="{{article.title}}">
			</div>
			<div class="input">
				<label for="article">article</label><br />
				<textarea required form="addnews" name="article">{{article.article}}</textarea>
			</div>
			<div class="input">
				<label for="photo">Photo</label><br />
				<input type="file" name="photo" accept="image/*">
			</div>
			{{#if article}}
			<p><input type="submit" value="Edit" formaction="/news/add/{{article.id}}"></p>
      <p><input type="submit" value="Delete" formaction="/news/delete/{{article.id}}"></p>
			{{else}}
			<p><input type="submit" value="Create" formaction="/news/add/"></p>
			{{/if}}
		</form>

		<p><a href="/">Home page</a></p>
	</main>
</body>

</html>